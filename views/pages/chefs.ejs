<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://tailwindcomponents.com/css/component.dashboard-template.css" rel="stylesheet" />
    <title>Restaurant || Admin</title>
  </head>
  <body class="relative h-screen overflow-hidden flex items-center justify-center" style="background: #edf2f7">
    <div style="width: 100%">
      <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>

      <div x-data="{ sidebarOpen: false }" class="flex h-screen bg-gray-200">
        <div :class="sidebarOpen ? 'block' : 'hidden'" @click="sidebarOpen = false" class="fixed z-20 inset-0 bg-black opacity-50 transition-opacity lg:hidden"></div>

        <%- include('../includes/admin/sidebar' ,{page:"admin"}) %>
        <div class="flex-1 flex flex-col overflow-hidden">
          <%- include ('../includes/admin/header',{page:"admin"}) %>
          <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
            <div class="container mx-auto px-6 py-8 relative">
              <h3 class="text-gray-700 text-3xl font-medium ">Dashboard</h3>
              <button onclick="handleAdd()" class="my-10 absolute top-0 right-0 mr-10 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Ajouter</button>

              <div class="mt-8"></div>

              <div class="flex flex-col mt-8">
                <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
                  <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
                    <table>
                      <thead>
                        <tr>
                          <th class="px-6 py-3 border-b border-gray-200 bg-gray-50">Actions</th>

                          <th class="px-20 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                            image
                          </th>
                          <th class="px-20 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                            Nom
                          </th>
                          <th class="px-20 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                            Tâche
                          </th>
                          
                        </tr>
                      </thead>

                      <tbody id="tablebody" class="bg-white">
                        <% results.forEach(chef => { %>
                        <tr id="tablerow">
                           

                          <div
                            id="Model"
                            class="hidden absolute top-0 left-0 w-full h-full z-10 flex flex-row justify-center items-center"
                            style="background-color: rgba(255, 255, 255, 0.438); z-index: 10000;"
                          >
                            <div class="absolute top-0 left-0  sm:w-3/4 md:w-1/2 lg:w-1/3 mx-2 sm:mx-auto my-10 w-1\/2 h-16">
                              <div
                                class="bg-white shadow-lg rounded-lg text-gray-900 z-20"
                                x-transition:enter="transition transform duration-300"
                                x-transition:enter-start="scale-0"
                                x-transition:enter-end="scale-100"
                                x-transition:leave="transition transform duration-300"
                                x-transition:leave-start="scale-100"
                                x-transition:leave-end="scale-0"
                              >
                                <header class="flex flex-col justify-center items-center p-3 text-orange-600">
                                  <h2 class="font-semibold text-2xl text-center">Confirmer la suppression de: <%=chef.name%></h2>
                                </header>
                                <main class="p-3 text-center">
                                  <p>Es-tu sûr ?</p>
                                </main>
                                <footer class="flex justify-center bg-transparent">
                                  <form action="<%='/admin/chef/delete/'+chef.id  %>" Method="POST" enctype="multipart/form-data" >
                                    
                                    <input
                                      id="deleteconfirmed"
                                      value="Oui"
                                      type="submit"
                                      class="
                                        bg-orange-600
                                        font-semibold
                                        text-white
                                        py-3
                                        w-full
                                        rounded-b-md
                                        hover:bg-orange-700
                                        focus:outline-none focus:ring
                                        shadow-lg
                                        hover:shadow-none
                                        transition-all
                                        duration-300
                                      "
                                    >
                                    </input>
                                  </form>
                                  <button
                                    class="
                                      bg-orange-600
                                      font-semibold
                                      text-white
                                      py-3
                                      w-full
                                      rounded-b-md
                                      hover:bg-orange-700
                                      focus:outline-none focus:ring
                                      shadow-lg
                                      hover:shadow-none
                                      transition-all
                                      duration-300
                                    "
                                    onclick="hideModel()"
                                  >
                                    Non
                                  </button>
                                </footer>
                              </div>
                            </div>
                          </div>
                           
                          <td
                           
                            class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-200 text-sm leading-5 font-medium flex flex-col flex-wrap items-center justify-evenly"
                          >
                            <a  onclick="handleclick('<%=JSON.stringify(chef)%>')" href="#" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                            <a onclick="handleModel('<%=chef.id%>')" href="#" class="text-indigo-600 hover:text-indigo-900">Supprimer</a>
                          </td>
                       

                          
                          <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                              <div class="flex-shrink-0 h-10 w-10">
                                <img class="h-10 w-10 rounded-full" src="<%=chef.image%>" alt="menuitemimage" />
                              </div>

                          </td>
                          <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="text-sm leading-5 text-gray-900 text-center"><%=chef.name%></div>
                          </td>
                          <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="text-sm leading-5 text-gray-900 text-center"><%=chef.tasks%></div>
                          </td>
                          
                          
                         
                        </tr>

                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </main>
        </div>
      </div>
    </div>
  </body>
  <script>
    let showModal2 = true;
    const markupGet = (obj, add = false) => `
          <form action="/admin/chef" id="formedit${obj.id}" name="formedit${obj.id}" Method="POST" enctype="multipart/form-data">
        </form>
        <input
        style='width:0;height:0; display:none;'
              form="formedit${obj.id}"
                id="chefid"
                name="chefid"
                value=${obj.id}
                type="text"
                placeholder="id"
              />
          <tr id="tablerow">
        <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-200 text-sm leading-5 font-medium">
            <input
            form="formedit${obj.id}"
            ${add ? 'required' : ''}
            class="shadow appearance-none border rounded w-full py-1 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            value="sauvez"
            type="submit"
            />

        </td>
        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
         <input
          form="formedit${obj.id}"
          ${add ? 'required' : ''}
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="chefimage"
            name="chefimage"
            type="file"
            accpet='images/*'
          />
        </td>

        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
          <input
          form="formedit${obj.id}"
          ${add ? 'required' : ''}
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="chefname"
            name="chefname"
            type="text"
            placeholder="Nom"
          />
        </td>
        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
          <input
          form="formedit${obj.id}"
          ${add ? 'required' : ''}
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="cheftask"
            name="cheftask"
            type="text"
            placeholder="Tâche"
          />
        </td>
        </tr>
    `;

    const handleAdd = function () {
      let row = document.querySelector('#tablebody');
      let obj = {
        id: 'add',
      };
      row.insertAdjacentHTML('afterbegin', markupGet(obj, true));
    };
    const handleclick = function (el) {
      let row = window.event.target.closest('#tablerow');
      const obj = JSON.parse(el);
      row.innerHTML = '';
      row.insertAdjacentHTML('afterbegin', markupGet(obj));
    };
    const confirmDelete = function (el) {
      window.event.preventDefault();
      const model = document.querySelector('#Model');
    };
    const hideModel = function (el) {
      const model = document.querySelector('#Model');
      model.classList.add('hidden');
    };
    const handleModel = function (id) {
      const model = document.querySelector('#Model');
      console.log(model)
      model.classList.remove('hidden');
    };
  </script>
</html>
